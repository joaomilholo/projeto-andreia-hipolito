---
const { title, icon: Icon, text, link } = Astro.props;
---

<div
  class="flex h-[250px] max-w-[350px] flex-col gap-[10px] border-[1px] border-[#DBDBDB] bg-[#EAEBEB] p-7 font-[Inter]"
>
  <div class="text-[#453131]">
    <Icon size={36} absoluteStrokeWidth={true} />
  </div>
  <div class="gap-[5px]">
    <h3 class="text-lg font-medium text-[#D7AA67]">{title}</h3>
    <span class="text-14/17 text-[#6A6A6A]">
      {text}
    </span>
  </div>
  <div
    class="w-fit cursor-pointer bg-[#D7AA67] px-[18px] py-[9px] text-sm text-white transition-transform delay-75 duration-300 ease-in-out hover:scale-120 hover:bg-[#c39258]"
  >
    <a href={link} target="_blank"> Saiba Mais </a>
  </div>
</div>
